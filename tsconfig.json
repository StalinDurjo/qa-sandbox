{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@pages/*": ["pages/*"],
      "@testConfig": ["test.config.ts"]
    }
  },
  "include": ["src/**/*", "pages/**/*", "actions/**/*", "mocker/**/*", "test.config.ts"],
  "exclude": ["node_modules"]
}
