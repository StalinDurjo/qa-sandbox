<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Table</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script>
        function toggleSubmenu(id) {
            const submenu = document.getElementById(id);
            submenu.classList.toggle('hidden');
            const icon = document.getElementById(`icon-${id}`);
            icon.classList.toggle('fa-chevron-right');
            icon.classList.toggle('fa-chevron-down');
        }
    </script>
</head>
<body class="bg-white">
    <!-- Header -->
    <header class="bg-white border-b text-gray-800 px-3 py-2 fixed w-full z-10">
        <div class="flex items-center justify-between">
            <h1 class="text-base font-medium">Dashboard</h1>
            <div class="flex items-center space-x-3">
                <span class="text-sm">John Doe</span>
                <i class="fas fa-user-circle"></i>
            </div>
        </div>
    </header>

    <div class="flex pt-10">
        <!-- Sidebar -->
        <aside class="bg-white border-r w-48 min-h-screen fixed"> <!-- Slightly increased width for submenu -->
            <nav class="py-1">
                <ul class="space-y-0">
                    <li>
                        <a href="#" class="flex items-center px-3 py-1.5 text-sm hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-tachometer-alt w-4 text-gray-400"></i>
                            <span class="ml-2">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('users-submenu')" class="w-full flex items-center px-3 py-1.5 text-sm hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-users w-4 text-gray-400"></i>
                            <span class="ml-2">Users</span>
                            <i id="icon-users-submenu" class="fas fa-chevron-right ml-auto text-gray-400 text-xs"></i>
                        </button>
                        <ul id="users-submenu" class="hidden pl-7 bg-gray-50">
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">All Users</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Add User</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">User Groups</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Permissions</a></li>
                        </ul>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('analytics-submenu')" class="w-full flex items-center px-3 py-1.5 text-sm hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-chart-bar w-4 text-gray-400"></i>
                            <span class="ml-2">Analytics</span>
                            <i id="icon-analytics-submenu" class="fas fa-chevron-right ml-auto text-gray-400 text-xs"></i>
                        </button>
                        <ul id="analytics-submenu" class="hidden pl-7 bg-gray-50">
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Overview</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Reports</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Export Data</a></li>
                        </ul>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('settings-submenu')" class="w-full flex items-center px-3 py-1.5 text-sm hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-cog w-4 text-gray-400"></i>
                            <span class="ml-2">Settings</span>
                            <i id="icon-settings-submenu" class="fas fa-chevron-right ml-auto text-gray-400 text-xs"></i>
                        </button>
                        <ul id="settings-submenu" class="hidden pl-7 bg-gray-50">
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">General</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Security</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Notifications</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Integrations</a></li>
                        </ul>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('projects-submenu')" class="w-full flex items-center px-3 py-1.5 text-sm hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-folder w-4 text-gray-400"></i>
                            <span class="ml-2">Projects</span>
                            <i id="icon-projects-submenu" class="fas fa-chevron-right ml-auto text-gray-400 text-xs"></i>
                        </button>
                        <ul id="projects-submenu" class="hidden pl-7 bg-gray-50">
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Active Projects</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Archived</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Templates</a></li>
                        </ul>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('tasks-submenu')" class="w-full flex items-center px-3 py-1.5 text-sm hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-tasks w-4 text-gray-400"></i>
                            <span class="ml-2">Tasks</span>
                            <i id="icon-tasks-submenu" class="fas fa-chevron-right ml-auto text-gray-400 text-xs"></i>
                        </button>
                        <ul id="tasks-submenu" class="hidden pl-7 bg-gray-50">
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">My Tasks</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Assigned to Me</a></li>
                            <li><a href="#" class="block px-3 py-1 text-sm text-gray-600 hover:bg-gray-100">Calendar</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-48 p-3"> <!-- Adjusted margin to match new sidebar width -->
            <div class="border rounded">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead>
                            <tr class="bg-gray-50">
                                <th class="px-2 py-1.5 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                <th class="px-2 py-1.5 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                                <th class="px-2 py-1.5 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                                <th class="px-2 py-1.5 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% data.forEach((item, index) => { %>
                                <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %>">
                                    <td class="px-2 py-1.5 text-sm text-gray-900 border-r"><%= item.id %></td>
                                    <td class="px-2 py-1.5 text-sm text-gray-900 border-r"><%= item.name %></td>
                                    <td class="px-2 py-1.5 text-sm text-gray-900 border-r"><%= item.email %></td>
                                    <td class="px-2 py-1.5 text-sm text-gray-900"><%= item.role %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
