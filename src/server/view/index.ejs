<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | YourSaaS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
        }
        .submenu.open {
            max-height: 500px;
        }
        .chevron-icon {
            transition: transform 0.2s ease-out;
        }
        .chevron-icon.rotated {
            transform: rotate(90deg);
        }
    </style>
    <script>
        function toggleSubmenu(id) {
            const submenu = document.getElementById(id);
            const icon = document.getElementById(`icon-${id}`);
            submenu.classList.toggle('open');
            icon.classList.toggle('rotated');
        }
    </script>
</head>
<body class="bg-white">
    <!-- Header -->
    <header class="bg-white border-b h-10 fixed w-full z-10">
        <div class="flex items-center justify-between h-full px-3">
            <h1 class="text-sm font-medium text-slate-900">YourSaaS</h1>
            <div class="flex items-center space-x-3">
                <button class="text-slate-500 hover:text-slate-700">
                    <i class="fas fa-bell text-sm"></i>
                </button>
                <div class="flex items-center space-x-2 pl-2 border-l">
                    <span class="text-sm">John Doe</span>
                    <i class="fas fa-user-circle text-slate-400"></i>
                </div>
            </div>
        </div>
    </header>

    <div class="flex pt-10">
        <!-- Sidebar -->
        <aside class="bg-white border-r w-44 min-h-screen fixed">
            <nav class="py-1">
                <ul class="space-y-0">
                    <li>
                        <a href="#" class="flex items-center px-2 py-1.5 text-xs text-slate-700 hover:bg-slate-50">
                            <i class="fas fa-tachometer-alt w-4 text-slate-400"></i>
                            <span class="ml-2">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('users-submenu')"
                                class="w-full flex items-center px-2 py-1.5 text-xs hover:bg-slate-50 text-slate-700">
                            <i class="fas fa-users w-4 text-slate-400"></i>
                            <span class="ml-2">Users</span>
                            <i id="icon-users-submenu" class="fas fa-chevron-right ml-auto text-slate-400 text-xs chevron-icon"></i>
                        </button>
                        <ul id="users-submenu" class="submenu bg-slate-50">
                            <li><a href="#" class="block pl-8 pr-2 py-1 text-xs text-slate-600 hover:bg-slate-100">All Users</a></li>
                            <li><a href="#" class="block pl-8 pr-2 py-1 text-xs text-slate-600 hover:bg-slate-100">Add User</a></li>
                            <li><a href="#" class="block pl-8 pr-2 py-1 text-xs text-slate-600 hover:bg-slate-100">Groups</a></li>
                        </ul>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('analytics-submenu')"
                                class="w-full flex items-center px-2 py-1.5 text-xs hover:bg-slate-50 text-slate-700">
                            <i class="fas fa-chart-bar w-4 text-slate-400"></i>
                            <span class="ml-2">Analytics</span>
                            <i id="icon-analytics-submenu" class="fas fa-chevron-right ml-auto text-slate-400 text-xs chevron-icon"></i>
                        </button>
                        <ul id="analytics-submenu" class="submenu bg-slate-50">
                            <li><a href="#" class="block pl-8 pr-2 py-1 text-xs text-slate-600 hover:bg-slate-100">Overview</a></li>
                            <li><a href="#" class="block pl-8 pr-2 py-1 text-xs text-slate-600 hover:bg-slate-100">Reports</a></li>
                        </ul>
                    </li>
                    <li>
                        <button onclick="toggleSubmenu('settings-submenu')"
                                class="w-full flex items-center px-2 py-1.5 text-xs hover:bg-slate-50 text-slate-700">
                            <i class="fas fa-cog w-4 text-slate-400"></i>
                            <span class="ml-2">Settings</span>
                            <i id="icon-settings-submenu" class="fas fa-chevron-right ml-auto text-slate-400 text-xs chevron-icon"></i>
                        </button>
                        <ul id="settings-submenu" class="submenu bg-slate-50">
                            <li><a href="#" class="block pl-8 pr-2 py-1 text-xs text-slate-600 hover:bg-slate-100">General</a></li>
                            <li><a href="#" class="block pl-8 pr-2 py-1 text-xs text-slate-600 hover:bg-slate-100">Security</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-44 p-3">
            <!-- Quick Stats -->
            <div class="grid grid-cols-4 gap-3 mb-3">
                <div class="bg-slate-50 border px-3 py-2 rounded">
                    <div class="text-xs text-slate-500">Total Users</div>
                    <div class="text-lg font-medium">2,451</div>
                </div>
                <div class="bg-slate-50 border px-3 py-2 rounded">
                    <div class="text-xs text-slate-500">Active Now</div>
                    <div class="text-lg font-medium">186</div>
                </div>
                <div class="bg-slate-50 border px-3 py-2 rounded">
                    <div class="text-xs text-slate-500">New Today</div>
                    <div class="text-lg font-medium">24</div>
                </div>
                <div class="bg-slate-50 border px-3 py-2 rounded">
                    <div class="text-xs text-slate-500">Pending</div>
                    <div class="text-lg font-medium">12</div>
                </div>
            </div>

            <!-- Table Section -->
            <div class="border rounded">
                <div class="flex items-center justify-between px-3 py-2 border-b bg-slate-50">
                    <h2 class="text-xs font-medium">User Management</h2>
                    <button class="px-2 py-1 text-xs bg-blue-500 text-white rounded hover:bg-blue-600">Add User</button>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead>
                            <tr class="bg-slate-50 text-left">
                                <th class="px-3 py-1.5 text-xs font-medium text-slate-500">ID</th>
                                <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Name</th>
                                <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Email</th>
                                <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Role</th>
                                <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Status</th>
                                <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((item, index) => { %>
                                <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-slate-50' %> border-b">
                                    <td class="px-3 py-1.5 text-xs text-slate-900"><%= item.id %></td>
                                    <td class="px-3 py-1.5 text-xs text-slate-900">
                                        <div class="flex items-center">
                                            <i class="fas fa-user-circle text-slate-400 mr-2"></i>
                                            <%= item.name %>
                                        </div>
                                    </td>
                                    <td class="px-3 py-1.5 text-xs text-slate-600"><%= item.email %></td>
                                    <td class="px-3 py-1.5 text-xs">
                                        <span class="px-1.5 py-0.5 text-xs rounded-sm
                                            <%= item.role === 'Admin' ? 'bg-purple-50 text-purple-700' :
                                               item.role === 'Editor' ? 'bg-blue-50 text-blue-700' :
                                               'bg-green-50 text-green-700' %>">
                                            <%= item.role %>
                                        </span>
                                    </td>
                                    <td class="px-3 py-1.5 text-xs">
                                        <div class="flex items-center">
                                            <div class="w-1.5 h-1.5 rounded-full bg-green-500 mr-1.5"></div>
                                            Active
                                        </div>
                                    </td>
                                    <td class="px-3 py-1.5 text-xs">
                                        <button class="text-blue-500 hover:text-blue-700 mr-2">Edit</button>
                                        <button class="text-red-500 hover:text-red-700">Delete</button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <div class="px-3 py-1.5 border-t bg-slate-50 flex items-center justify-between">
                    <span class="text-xs text-slate-600">Showing 1-10 of 100</span>
                    <div class="flex space-x-1">
                        <button class="px-2 py-1 text-xs bg-white border rounded hover:bg-slate-50">Previous</button>
                        <button class="px-2 py-1 text-xs bg-white border rounded hover:bg-slate-50">Next</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
