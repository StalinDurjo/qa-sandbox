<!-- Table Section -->
<div class="border rounded">
  <div class="flex items-center justify-between px-3 py-2 border-b bg-slate-50">
      <h2 class="text-xs font-medium">Country Table</h2>
  </div>
  <div class="overflow-x-auto">
      <table class="min-w-full">
          <thead>
              <tr class="bg-slate-50 text-left">
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">alpha2</th>
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">name</th>
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">alpha3</th>
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">numeric</th>
              </tr>
          </thead>
          <tbody>
              <% data.forEach((item, index) => { %>
                  <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-slate-50' %> border-b">
                      <td class="px-3 py-1.5 text-xs text-slate-900"><%= item.alpha2 %></td>
                      <td class="px-3 py-1.5 text-xs text-slate-900">
                          <div class="flex items-center"><%= item.name %></div>
                      </td>
                      <td class="px-3 py-1.5 text-xs text-slate-600"><%= item.alpha3 %></td>
                      <td class="px-3 py-1.5 text-xs">
                          <span class="px-1.5 py-0.5 text-xs rounded-sm">
                              <%= item.numeric %>
                          </span>
                      </td>
                  </tr>
              <% }); %>
          </tbody>
      </table>
  </div>
</div>