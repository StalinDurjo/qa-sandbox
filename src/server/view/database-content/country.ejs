<!-- Quick Stats -->
<div class="grid grid-cols-4 gap-3 mb-3">
  <div class="bg-slate-50 border px-3 py-2 rounded">
      <div class="text-xs text-slate-500">Total Users</div>
      <div class="text-lg font-medium">0</div>
  </div>
  <div class="bg-slate-50 border px-3 py-2 rounded">
      <div class="text-xs text-slate-500">Active Now</div>
      <div class="text-lg font-medium">0</div>
  </div>
  <div class="bg-slate-50 border px-3 py-2 rounded">
      <div class="text-xs text-slate-500">New Today</div>
      <div class="text-lg font-medium">0</div>
  </div>
  <div class="bg-slate-50 border px-3 py-2 rounded">
      <div class="text-xs text-slate-500">Pending</div>
      <div class="text-lg font-medium">0</div>
  </div>
</div>

<!-- Table Section -->
<div class="border rounded">
  <div class="flex items-center justify-between px-3 py-2 border-b bg-slate-50">
      <h2 class="text-xs font-medium">User Management</h2>
      <button class="px-2 py-1 text-xs bg-blue-500 text-white rounded hover:bg-blue-600">Add User</button>
  </div>
  <div class="overflow-x-auto">
      <table class="min-w-full">
          <thead>
              <tr class="bg-slate-50 text-left">
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">ID</th>
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Name</th>
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Email</th>
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Role</th>
                  <th class="px-3 py-1.5 text-xs font-medium text-slate-500">Actions</th>
              </tr>
          </thead>
          <tbody>
              <% data.forEach((item, index) => { %>
                  <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-slate-50' %> border-b">
                      <td class="px-3 py-1.5 text-xs text-slate-900"><%= item.id %></td>
                      <td class="px-3 py-1.5 text-xs text-slate-900">
                          <div class="flex items-center">
                              <i class="fas fa-user-circle text-slate-400 mr-2"></i>
                              <%= item.name %>
                          </div>
                      </td>
                      <td class="px-3 py-1.5 text-xs text-slate-600"><%= item.email %></td>
                      <td class="px-3 py-1.5 text-xs">
                          <span class="px-1.5 py-0.5 text-xs rounded-sm
                              <%= item.role === 'Admin' ? 'bg-purple-50 text-purple-700' :
                                 item.role === 'Editor' ? 'bg-blue-50 text-blue-700' :
                                 'bg-green-50 text-green-700' %>">
                              <%= item.role %>
                          </span>
                      </td>
                      <td class="px-3 py-1.5 text-xs">
                          <button class="text-blue-500 hover:text-blue-700 mr-2">Edit</button>
                          <button class="text-red-500 hover:text-red-700">Delete</button>
                      </td>
                  </tr>
              <% }); %>
          </tbody>
      </table>
  </div>
</div>